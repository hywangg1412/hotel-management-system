<Window x:Class="WPF.View.BookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Booking" Height="450" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Edit Booking Details" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Booking ID:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Booking.BookingID}" IsReadOnly="True" Margin="0,5,0,15"/>

            <TextBlock Text="Customer:" FontWeight="SemiBold"/>
            <ComboBox ItemsSource="{Binding Customers}" 
                      SelectedValue="{Binding Booking.CustomerID}"
                      SelectedValuePath="UserID"
                      DisplayMemberPath="FullName" 
                      Margin="0,5,0,15"/>

            <TextBlock Text="Room:" FontWeight="SemiBold"/>
            <ComboBox ItemsSource="{Binding Rooms}" 
                      SelectedValue="{Binding Booking.RoomID}"
                      SelectedValuePath="RoomId"
                      DisplayMemberPath="RoomNumber" 
                      Margin="0,5,0,15"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Start Date:" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding Booking.StartDate}" Margin="0,5,0,15"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="End Date:" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding Booking.EndDate}" Margin="0,5,0,15"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Status:" FontWeight="SemiBold"/>
            <ComboBox SelectedValue="{Binding Booking.Status}" 
                      SelectedValuePath="Content"
                      Margin="0,5,0,15">
                <ComboBoxItem Content="Confirmed"/>
                <ComboBoxItem Content="Completed"/>
                <ComboBoxItem Content="Cancelled"/>
            </ComboBox>

        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Command="{Binding SaveCommand}" Width="80" Height="30" Margin="0,0,10,0" Background="#4CAF50" Foreground="White"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80" Height="30" Background="#9E9E9E" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window> 