<UserControl x:Class="WPF.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="White" CornerRadius="16" Padding="32" Width="350" Height="380" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Text="Login" FontSize="28" FontWeight="Bold" Foreground="#2d3a4a"
                       Margin="0,0,0,24" HorizontalAlignment="Center"/>
            <TextBlock Text="Email:" FontWeight="SemiBold" Foreground="#2d3a4a"/>
            <TextBox Margin="0,5,0,18" Height="32" FontSize="15" Padding="8,0"
                     Background="#f4f6fb" BorderBrush="#c3cfe2" BorderThickness="1"
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Password:" FontWeight="SemiBold" Foreground="#2d3a4a"/>
            <PasswordBox Margin="0,5,0,18" Height="32" FontSize="15" Padding="8,0"
                         Background="#f4f6fb" BorderBrush="#c3cfe2" BorderThickness="1"
                         x:Name="PasswordBox"/>
            <TextBlock Text="{Binding LoginResult}" 
                       Foreground="Red" 
                       FontSize="12" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>
            <Button Content="Login" Height="38" FontSize="16" FontWeight="Bold"
                    Foreground="White" Background="#4f8cff" BorderBrush="#4f8cff"
                    BorderThickness="0" Cursor="Hand" Margin="0,10,0,0"
                    Command="{Binding LoginCommand}"/>
            <Button Content="Sign Up" Height="38" FontSize="16" FontWeight="Bold"
                    Foreground="#4f8cff" Background="White" BorderBrush="#4f8cff"
                    BorderThickness="2" Cursor="Hand" Margin="0,10,0,0"
                    Command="{Binding SignupCommand}"/>
        </StackPanel>
    </Border>
</UserControl>