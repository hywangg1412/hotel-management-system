<Window x:Class="WPF.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Management System - Login" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f4f6fb">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="1" 
                Background="White" 
                CornerRadius="16" 
                Padding="32"
                Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}">
            <StackPanel>
                <TextBlock Text="Hotel System" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#2d3a4a"
                           Margin="0,0,0,24" 
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="Email:" 
                           FontWeight="SemiBold"
                           Foreground="#2d3a4a"/>
                <TextBox Margin="0,5,0,18" Height="32" 
                         FontSize="15"
                         Padding="8,0"
                         Background="#f4f6fb"
                         BorderBrush="#c3cfe2"
                         BorderThickness="1"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                
                <TextBlock Text="Password:" 
                           FontWeight="SemiBold"
                           Foreground="#2d3a4a"/>
                <PasswordBox Margin="0,5,0,18" Height="32" 
                             FontSize="15"
                             Padding="8,0"
                             Background="#f4f6fb"
                             BorderBrush="#c3cfe2"
                             BorderThickness="1"
                             x:Name="PasswordBox"/>
                
                <Button Content="Login" Height="38" 
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#4f8cff"
                        BorderBrush="#4f8cff"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,10,0,0"
                        Command="{Binding LoginCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Background" Value="#4f8cff"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="#4f8cff"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3466c2"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#274b8a"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <TextBlock Text="{Binding LoginResult}" 
                           Foreground="Red" 
                           Margin="0,14,0,0"
                           FontWeight="SemiBold"
                           FontSize="14"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>