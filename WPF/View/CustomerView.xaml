<UserControl x:Class="WPF.View.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="FUMiniHotelSystem - Customer Dashboard" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center"/>
                <Button Content="Logout" Margin="20,0,0,0" Padding="15,5" 
                        Background="#FF5722" Foreground="White" BorderThickness="0"
                        Click="LogoutButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            
            <!-- Profile Management Tab -->
            <TabItem Header="My Profile">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Profile Form -->
                    <Border Grid.Row="0" Background="#E8F5E8" Padding="20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Profile Information" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Full Name:" Margin="0,10" FontWeight="Bold"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FullName}" Margin="10" Padding="5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Telephone:" Margin="0,10" FontWeight="Bold"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Telephone}" Margin="10" Padding="5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:" Margin="0,10" FontWeight="Bold"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Email}" Margin="10" Padding="5"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Birthday:" Margin="0,10" FontWeight="Bold"/>
                                    <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding Birthday}" Margin="10"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Password:" Margin="0,10" FontWeight="Bold"/>
                                    <PasswordBox Grid.Row="4" Grid.Column="1" x:Name="PasswordBox" Margin="10" Padding="5"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Confirm Password:" Margin="0,10" FontWeight="Bold"/>
                                    <PasswordBox Grid.Row="5" Grid.Column="1" x:Name="ConfirmPasswordBox" Margin="10" Padding="5"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0">
                                <Button Content="Update Profile" Padding="20,10" Background="#4CAF50" Foreground="White" 
                                        Command="{Binding UpdateProfileCommand}" Margin="0,10"/>
                                <Button Content="Refresh Data" Padding="20,10" Background="#2196F3" Foreground="White" 
                                        Command="{Binding RefreshCommand}" Margin="0,10"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Current Customer Info -->
                    <Border Grid.Row="1" Background="#F5F5F5" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Current Profile Information" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Customer ID:" FontWeight="Bold" Margin="0,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentCustomer.UserID}" Margin="10,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentCustomer.Status}" Margin="10,5"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Booking Management Tab -->
            <TabItem Header="My Bookings">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Section -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="10" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Search My Bookings:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Width="200" Text="{Binding SearchKeyword}" Margin="0,0,10,0"/>
                            <Button Content="Search" Padding="10,5" Background="#4CAF50" Foreground="White" 
                                    Command="{Binding SearchBookingsCommand}"/>
                            <Button Content="Refresh" Padding="10,5" Background="#2196F3" Foreground="White" 
                                    Command="{Binding RefreshCommand}" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- New Booking Section -->
                    <Border Grid.Row="1" Background="#E3F2FD" Padding="15" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Create New Booking" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Start Date:" Margin="0,5"/>
                                    <DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding StartDate}" Margin="5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="End Date:" Margin="0,5"/>
                                    <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding EndDate}" Margin="5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Select Room:" Margin="0,5"/>
                                    <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding AvailableRooms}" 
                                              SelectedItem="{Binding SelectedRoom}" Margin="5"
                                              DisplayMemberPath="RoomNumber"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Room Details" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Room Number:" Margin="0,5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedRoom.RoomNumber}" Margin="5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" Margin="0,5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedRoom.RoomDescription}" Margin="5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Max Capacity:" Margin="0,5"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedRoom.RoomMaxCapacity}" Margin="5"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Price Per Day:" Margin="0,5"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedRoom.RoomPricePerDate, StringFormat='${0:N2}'}" Margin="5"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <Button Content="Create Booking" Padding="15,8" Background="#4CAF50" Foreground="White" 
                                        Command="{Binding CreateBookingCommand}" Margin="0,5"/>
                                <Button Content="Cancel Booking" Padding="15,8" Background="#F44336" Foreground="White" 
                                        Command="{Binding CancelBookingCommand}" Margin="0,5"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Booking History -->
                    <DataGrid Grid.Row="2" ItemsSource="{Binding Bookings}" 
                              SelectedItem="{Binding SelectedBooking}" 
                              AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingID}" Width="80"/>
                            <DataGridTextColumn Header="Room ID" Binding="{Binding RoomID}" Width="80"/>
                            <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                            <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                            <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat='${0:N2}'}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Message Display -->
        <Border Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" 
                Background="#FFEB3B" Padding="10" Margin="10">
            <TextBlock Text="{Binding Message}" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
