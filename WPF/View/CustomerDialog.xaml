<Window x:Class="WPF.View.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding DialogTitle}" Height="450" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="{Binding DialogTitle}" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Full Name:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Customer.FullName, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,15" Padding="8"/>

            <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Customer.Email, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,15" Padding="8"/>

            <TextBlock Text="Telephone:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Customer.Telephone, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,15" Padding="8"/>

            <TextBlock Text="Birthday:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <DatePicker SelectedDate="{Binding Customer.Birthday}" 
                        Margin="0,0,0,15"/>

            <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15" Padding="8"/>

            <TextBlock Text="Status:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox SelectedValue="{Binding Customer.Status}" Margin="0,0,0,15">
                <ComboBoxItem Content="Active" Tag="1"/>
                <ComboBoxItem Content="Inactive" Tag="0"/>
            </ComboBox>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Height="30" Margin="0,0,10,0" 
                    Background="#4CAF50" Foreground="White"
                    Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Width="80" Height="30" 
                    Background="#9E9E9E" Foreground="White"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window> 