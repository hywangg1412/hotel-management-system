<UserControl x:Class="WPF.View.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="White" CornerRadius="16" Padding="32" Width="350" Height="220" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Text="Hotel Management System" FontSize="20" FontWeight="Bold" Foreground="#2d3a4a"
                       Margin="0,0,0,24" HorizontalAlignment="Center"/>
            <Button Content="Login" Height="38" Command="{Binding LoginCommand}" />
            <Button Content="Sign Up" Height="38" Command="{Binding SignupCommand}" />
        </StackPanel>
    </Border>
</UserControl>